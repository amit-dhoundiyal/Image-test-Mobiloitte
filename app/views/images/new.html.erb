<center>
<div class="container">
   <div class="uplaod-block-main">
      <%= nested_form_for @claim , url: images_path, methods: "post",local: true do |f| %>
      <%= f.text_field :title , placeholder: "Please enter the title" , class: "form-control" %>
      <div class="container" style="padding:20px 0">
         <div class="row">
            <div class="col-sm-6">
               <%= f.fields_for :images do |nest_form| %>
               <%= (render 'image_form', a: nest_form )  %>
               <% end %>
               <%= f.link_to_add image_tag("/assets/add_image.png", style: "height: 50px; width: 50px;" ), :images  %>
            </div>
         </div>
      </div>
   </div>
   <%= f.submit "Save",  class: "btn btn-success"%>
   <% end %>
</div>
</center>

